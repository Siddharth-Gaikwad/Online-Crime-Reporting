/* Global Styles */
body {
  background-image: url('<%= asset_path("bg1.jpg") %>');
  background-size: cover;
  background-attachment: fixed;
  background-position: center;
  font-family: 'Poppins', sans-serif;
  color: #000;
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

/* Navbar Styling */
.navbar {
  background: rgba(0, 0, 0, 0.85);
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
}

.navbar-brand {
  font-size: 2rem;
  font-weight: bold;
  color: rgb(255, 255, 255);
  text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.5);
}

/* Hero Section */
.hero-section {
  text-align: center;
  padding: 100px 20px;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 15px;
  margin: 50px auto 20px;
  width: 80%;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
}

.hero-section h1 {
  font-size: 3.5rem;
  font-weight: 700;
  color: #333;
  margin-bottom: 20px;
}

.hero-section p {
  font-size: 1.25rem;
  color: #555;
  line-height: 1.8;
}

/* Navigation Section */
.navigation-box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  min-height: 60vh;
}

.navigation-container {
  background: rgba(0, 0, 0, 0.85);
  padding: 50px 30px;
  border-radius: 20px;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
  width: 90%;
  max-width: 600px;
  text-align: center;
}

.navigation-container h2 {
  font-size: 2.5rem;
  font-weight: bold;
  color: #fff;
  margin-bottom: 30px;
}

.btn {
  display: block;
  width: 100%;
  margin: 15px auto;
  padding: 15px 30px;
  font-size: 1.25rem;
  border-radius: 10px;
  color: #fff;
  transition: all 0.3s ease;
  box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
}

.btn:hover {
  background-color: #0469ff;
  transform: translateY(-3px);
  box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.3);
}

/* Responsive Design */
@media (max-width: 768px) {
  .hero-section {
    padding: 60px 15px;
    margin: 20px;
  }

  .hero-section h1 {
    font-size: 2.5rem;
  }

  .hero-section p {
    font-size: 1rem;
  }

  .btn {
    font-size: 1rem;
    padding: 10px 20px;
  }
}
