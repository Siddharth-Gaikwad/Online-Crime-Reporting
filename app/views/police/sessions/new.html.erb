<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card mb-4" style="width: 400px;"> <!-- Set the width of the card -->
    <div class="card-header text-center">
      <h2>Log In</h2> <!-- Centered header -->
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %> <!-- Bootstrap form control -->
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %> <!-- Bootstrap form control -->
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3 form-check"> <!-- Remember me checkbox -->
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="text-center"> <!-- Centered submit button -->
          <%= f.submit "Log in", class: "btn btn-primary" %> <!-- Bootstrap button -->
        </div>
        <%= render "police/shared/links" %> <!-- Render additional links if needed -->
      <% end %>
    </div>
  </div>
</div>


