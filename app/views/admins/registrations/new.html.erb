<style>
  /* Custom Form Styles */
  .form-container {
    max-width: 500px;
    margin: 0 auto;
    padding: 100px;
    border: 1px solid #ced4da; /* Border around the entire form */
    border-radius: 8px; /* Rounded corners for the container */
    background-color: #f9f9f9; /* Light background color */
  }

  .form-control {
    border-radius: 5px; /* Rounded corners for input fields */
    border: 1px solid #ced4da; /* Subtle border color */
    padding: 12px; /* More padding inside inputs */
  }

  .form-label {
    font-size: 1.1rem; /* Larger font size for labels */
    color: #333; /* Dark text color for labels */
  }

  h2 {
    color: #343a40; /* Dark text for the header */
    font-weight: 600; /* Slightly bold for emphasis */
  }

  .actions {
    margin-top: 20px;
  }

  .btn-primary {
    background-color: #007bff; /* Custom primary color */
    border-color: #007bff; /* Match border with button */
    font-weight: 600;
    padding: 10px 20px;
    width: 100%;
    text-transform: uppercase;
  }

  .btn-primary:hover {
    background-color: #0056b3; /* Darker shade on hover */
    border-color: #0056b3;
  }

  .field {
    margin-bottom: 15px; /* Adds space between form fields */
  }
</style>



<div class="form-container">
  <h2 class="text-center mb-4">Sign Up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
   <!-- admin id field -->
    <div class="form-group">
    <%= f.label :admin_id, "Admin ID" %>
    <%= f.text_field :admin_id, class: "form-control", placeholder: "Enter your Admin ID", required: true %>
    </div>


    <!-- Password Field -->
    <div class="field">
      <%= f.label :password, class: "form-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="field">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <!-- Submit Button -->
    <div class="actions text-center">
      <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <%= render "admins/shared/links" %>
</div>
