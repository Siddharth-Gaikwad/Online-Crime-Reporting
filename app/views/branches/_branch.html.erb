<div class="d-flex">
  <!-- Sidebar -->
  <div>
    <%= render "pages/allnav" %>
  </div>

  <!-- Main Content -->
  <div id="<%= dom_id branch %>" class="flex-grow-1   mt-4 ms-3">
    <div  style="width: 1000px; margin-left:500px;"> <!-- Increased max-width -->
      <div class="card-header text-center">
        <h3>Branch Details</h3>
      </div>
      <div class="card-body">
        <!-- Jumbotron-like layout -->
        <div class="p-4 bg-light rounded shadow-sm">
          <h4 class="text-primary"><strong>Name:</strong> <%= branch.name %></h4>
          <p><strong>Address:</strong> <%= branch.address %></p>
          <p><strong>City:</strong> <%= branch.city %></p>
          <p><strong>State:</strong> <%= branch.state %></p>
          <p><strong>Pincode:</strong> <%= branch.pincode %></p>
            <div class="text-center mt-4">
          <%= link_to "Edit Branch", edit_branch_path(@branch), class: "btn btn-primary mx-2" %>
              </div>
              <div class="text-center mt-4">
          <%= button_to "Destroy Branch", @branch, method: :delete, class: "btn btn-danger mx-2" %>
        </div>
        </div>

        <!-- Action Buttons -->
      
      </div>
    </div>
  </div>
</div>
