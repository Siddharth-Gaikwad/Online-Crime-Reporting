 <div>
    <%= render "pages/allnav"%>
  </div>
<p style="color: green; font-weight: bold;"><%= notice %></p>

 <!-- Centered header with spacing -->

<div  style="width: 1000px; margin-left:500px;">
<h1 style="width: 1000px; margin-left:250px;">Branches</h1>
  <div class="row">
    <% @branches.each do |branch| %>
      <div class="col-md-4 mb-4"> <!-- 3 cards per row on medium and larger screens -->
        <div class="card shadow-lg border-0 rounded-lg h-100"> <!-- Card to hold branch details -->
          <div class="card-body">
            <h5 class="card-title text-primary"><%= branch.name %></h5> <!-- Branch Name -->
            <p class="card-text text-secondary">
              <strong>Address:</strong> <%= branch.address %><br />
              <strong>City:</strong> <%= branch.city %><br />
              <strong>State:</strong> <%= branch.state %><br />
              <strong>Pincode:</strong> <%= branch.pincode %>
            </p>
          </div>
          <div class="card-footer bg-light text-center"> <!-- Footer with subtle background -->
            <%= link_to "Show this branch", branch, class: "btn btn-outline-primary w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



