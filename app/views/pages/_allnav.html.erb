<style>
    /* General body styles */
    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background-color: #f8f9fa;
      display: flex; /* Use flexbox for the layout */
      overflow-x: hidden; /* Prevent horizontal scroll due to animations */
    }

    /* Sidebar styles */
    .sidebar {
      width: 250px;
      height: 100vh;
      background-color: #343a40;
      position: fixed;
      top: 0;
      left: 0;
      display: flex;
      flex-direction: column;
      padding-top: 20px;
      transform: translateX(-100%);
      animation: slideIn 1s forwards ease-out;
    }

    /* Sidebar animation */
    @keyframes slideIn {
      to {
        transform: translateX(0);
      }
    }

    /* Sidebar links */
    .sidebar a {
      color: #f8f9fa;
      padding: 15px 20px;
      text-decoration: none;
      font-size: 16px;
      display: block;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .sidebar a:hover {
      background-color: #495057;
      transform: translateX(10px);
    }

    /* Sidebar brand/logo */
    .sidebar .brand {
      font-size: 24px;
      font-weight: bold;
      color: #f8f9fa;
      text-align: center;
      padding: 10px 0;
      border-bottom: 1px solid #495057;
    }

    /* Content styles */
    .content-container {
      margin-left: 250px;
      padding: 20px;
      width: calc(100% - 250px);
      display: flex;
      flex-direction: column;
      align-items: center;
      animation: fadeIn 1.5s ease-in;
    }

    /* Content animation */
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    /* Image container */
    .image-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-top: 20px;
      width: 100%;
    }

    .image-container img {
      max-width: 80%;
      height: auto;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      transition: transform 0.5s ease;
    }

    .image-container img:hover {
      transform: scale(1.05);
    }

    /* Project info box */
    .project-info {
      max-width: 80%;
      margin-top: 20px;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
      animation: slideUp 1s ease-in-out;
    }

    /* Info box animation */
    @keyframes slideUp {
      from {
        transform: translateY(20px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .project-info h3 {
      font-size: 24px;
      margin-bottom: 10px;
      color: #343a40;
    }

    .project-info p {
      font-size: 16px;
      line-height: 1.6;
      color: #495057;
    }
  </style>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="brand">OnlineCrimeReport</div>

    <% if user_signed_in?%>
      <h2 class="brand">User Panel</h2>
    <%elsif admin_signed_in?%>
      <h2 class="brand">Amin Panel</h2>
    <%else police_signed_in?%>
      <h2 class="brand">Police Panel</h2>
    <%end%>


      <% if user_signed_in?%>
      <%= link_to 'Home', pages_users_path %>
      <%elsif admin_signed_in?%>
