
 <style>
  /* Sidebar Styling */
  .side-navbar {
    height: 100vh;
    width: 250px;
    position: fixed;
    top: 0;
    left: 0;
    background: linear-gradient(180deg, #0066cc, #0099ff);
    padding: 20px 10px;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    transition: width 0.3s ease;
    z-index: 999;
    animation: fadeIn 0.5s ease-out; /* Apply fade-in animation */
  }

  /* Fade-In Animation */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .side-navbar .navbar-brand {
    color: #fff;
    font-weight: bold;
    font-size: 1.5rem;
    margin-bottom: 20px;
    display: block;
    text-align: center;
  }

  .side-navbar .nav-link {
    color: #f9f9f9;
    font-weight: 500;
    margin: 10px 0;
    padding: 10px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
    display: flex;
    align-items: center;
  }

  .side-navbar .nav-link:hover {
    background-color: #0056b3;
    transform: translateX(5px);
    color: #ffcc00;
  }

  .side-navbar .btn {
    margin-top: 20px;
    display: block;
    width: 100%;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .side-navbar .btn:hover {
    transform: scale(1.05);
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
  }

  /* Content Styling */
   .content {
    margin-left: 260px;
    padding: 20px;
    transition: margin-left 0.3s ease;
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .side-navbar {
      width: 200px; /* Make the sidebar narrower on small screens */
    }

    .content {
      margin-left: 0; /* Remove left margin for mobile screens */
    }
  }
</style>


  
    <div class="row">
      <!-- Sidebar -->
      <div class="side-navbar col-md-3 col-lg-2 p-3 bg-dark text-white">
        <h4 class="text-center mb-4">Admin Dashboard</h4>

        <% if admin_signed_in? %>
          <ul class="nav flex-column">
            <li class="nav-item">
              <%= link_to 'Home', pages_admin_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Create Branch', new_branch_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Branches', branches_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'View Cases', case_reports_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Edit Profile', edit_admin_registration_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Out', destroy_admin_session_path, method: :delete, data: { turbo_method: :delete }, class: 'nav-link' %>
