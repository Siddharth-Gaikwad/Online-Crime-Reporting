<h1>New Case Report</h1>

<% if user_signed_in? %>
  <%= form_with(model: @case_report, local: true) do |f| %>
    <%= render 'form', f: f %>
    <div class="mt-3">
      <%= f.submit "Create Case Report", class: "btn btn-primary" %>
    </div>
  <% end %>
<% else %>
  <p>Please sign in to submit a report.</p>
<% end %>
